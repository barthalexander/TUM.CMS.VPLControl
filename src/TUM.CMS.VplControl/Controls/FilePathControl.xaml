<UserControl x:Class="TUM.CMS.VplControl.Controls.FilePathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUM.CMS.VplControl.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="36" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Name="Title" VerticalAlignment="Center" HorizontalAlignment="Center" x:FieldModifier="public" Grid.Row="0"  Grid.Column="0" FontWeight="Bold" Content="File Path"></Label>
        <Button Name="Button" x:FieldModifier="public" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Select File"></Button>
        <Label Name="SelectedFile" VerticalAlignment="Center" HorizontalAlignment="Left" x:FieldModifier="public" Grid.Row="2"  Grid.Column="0"  Visibility="Collapsed"></Label>

    </Grid>
</UserControl>
